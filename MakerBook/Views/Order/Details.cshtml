@model MakerBook.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="about-heading-content">
    <div class="row">
        <div class="col-xl-9 col-lg-10 mx-auto">
            <div class="bg-faded rounded p-5">
                <h2 class="section-heading mb-4">
                    <span class="section-heading-upper">Register Professional</span>
                    <span class="section-heading-lower">Detail</span>
                </h2>

                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ServiceTitle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ServiceTitle)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CustomerName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PaymentType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaymentType)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
                <hr />
                <div>
                    @if (Model.Profile == MakerBook.Enum.ProfileEnum.Professional)
                    {
                        <a class="btn btn-primary btn-block" asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a>
                        <span>|</span>
                    }
                    <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</div>

@model RecoverPasswordModel
@{
    Layout = "_LayoutDefault";
    ViewData["Title"] = "Recover Password";
}
<p>Recover Password</p>

<h1>Index</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
       @TempData["ErrorMessage"].
    </div>
}


<form asp-controller="Login" asp-action="SendLinkToResetPassword" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" class="form-control" id="login" asp-for="Login">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">E-mail</label>
        <input type="text" class="form-control" id="email" asp-for="Email">
    </div>
     <p class="mb-4 text-sm mx-auto">
        Forgot your password?
        <a asp-action="RecoverPassword" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Recover my password</a>
    </p>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>
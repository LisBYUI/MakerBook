@model RecoverPasswordModel
@{
    Layout = "_LayoutDefault";
    ViewData["Title"] = "Recover Password";
}
<p>Recover Password</p>

<h1>Index</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
       @TempData["ErrorMessage"].
    </div>
}


<form asp-controller="Login" asp-action="SendLinkToResetPassword" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" class="form-control" id="login" asp-for="Login">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">E-mail</label>
        <input type="text" class="form-control" id="email" asp-for="Email">
    </div>
      <button type="submit" class="btn btn-primary btn-block">Recover Password</button>
     <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Login" role="button">Back to Login</a>

</form>
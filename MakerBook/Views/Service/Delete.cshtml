@using MakerBook.ViewModels
@model ServiceViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="about-heading-content">
    <div class="row">
        <div class="col-xl-9 col-lg-10 mx-auto">
            <div class="bg-faded rounded p-5">
                <h2 class="section-heading mb-4">
                    <span class="section-heading-upper">Delete</span>
                    <span class="section-heading-lower">Are you sure you want to delete this?</span>
                </h2>
                <p>

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Price)
                        </dd>


                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Professional)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Professional.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ServiceId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
                    </form>
         
            </p>
        </div>
    </div>
